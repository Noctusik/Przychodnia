<Window x:Class="Przychodnia.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logowanie" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Login:" Margin="5"/>
            <TextBox Name="txtLogin" Margin="5"/>
            <TextBlock Text="Hasło:" Margin="5"/>
            <PasswordBox Name="txtHaslo" Margin="5"/>
            <Button Content="Zaloguj" Click="btnZaloguj_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
